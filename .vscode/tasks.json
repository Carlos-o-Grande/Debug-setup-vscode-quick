{
	"tasks": [
		// this task runs "gcc". args[] is used to setup command options.
		// in this example:
		// cc -fdiagnostics-color=always -g3 "${fileBasename}" -o ${fileDirname}/ballons
		// ${fileBasename} is the active file on the editor.
		// For this example can be explicity replaced with ballons.c
		// the "label": "C/C++: gcc build active file" is how launch.json identifies the task to run
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				// "-O2",
				"${fileBasename}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		// same as previous but adds -fsanitize=address to the compiler flags
		{
			"type": "cppbuild",
			"label": "gcc build with -fsanatize",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-fsanitize=address",
				"${fileBasename}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		// this task runs 'make debug'. see Makefile file and 'Makefile & Launch' in launch.json
		{
			"type": "cppbuild",
			"label": "Makefile",
			"command": "make",
			"args": [
				"debug"
			],
			"options": {
				"cwd": "${fileDirname}",
				"program": "a.out" // edit to the bin name in your makefile
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "run makefile"
		},
	],
	"version": "2.0.0"
}
